{
  "compilerOptions": {
    "module": "system",
    "target": "esnext",
    "strict": true,
    "rootDirs": [
      "src/ts",
      "test/ts"
    ],
    "baseUrl": "src/ts",
    "outDir": "build",
    "pretty": true,
    "sourceMap": true,
    "incremental": true
  },
  "include": [
    "src/ts/**/*.ts",
    "test/ts/**/*Test.ts"
  ]
}
