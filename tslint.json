{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "class-name": false,
        "interface-name": false,
        "quotemark": [true, "single"],
        "indent": false,
        "array-type": false,
        "max-line-length": false,
        "variable-name": false,
        "object-literal-sort-keys": false,
        "max-classes-per-file": false
    }
}
